//Conversion de Litros/100km a Dominicano Km/Galon

#include <stdio.h>
#include <stdlib.h>
int main() 
{
  float precioGasolina = 0.0 ;
  float paso = 0.0;
  float promedioCarretera = 0.0;
  float promedioCiudad = 0.0;
  float promedio = 0.0;
  char control = 1;
  const float litro2galon = 3.78;

  printf ("Conversion de Litros/100km a Dominicano Km/Galon\n");

  if (precioGasolina == 0.0)
    {
      printf ("Por favor, ingrese el precio de la gasolina x galon: ") ;
      scanf ("%f",&precioGasolina); 
    }
 control = 1;
  while (control)
     { 
       printf ( "\nPor favor, ingrese el consumo promedio en la ciudad: ");
      scanf("%f",&promedioCiudad);

       printf ( "\nPor favor, ingrese el consumo promedio en la carretera: ");
       scanf("%f",&promedioCarretera);

       printf ( "\n Por favor sumisnistrar paso del detalle a imprimir: ");
       scanf("%f",&paso);

       if (promedioCiudad < promedioCarretera)
         { 
          printf("\nError. El promedio carretera debe ser mayor al de ciudad:"); 

           }else if (paso < 0.1 || paso > 2)
            { 
         printf("\nError. El valor del paso debe estar entre: 0.1 hasta 2.");

       }else 
       {
        control = 0; 
         }

       
       }
  for (promedio = promedioCiudad; promedio >= promedioCarretera;promedio = promedio - paso)
    {
    float kmxgal = 0;
    float costokm = 0;
    kmxgal = 100 / (promedio / litro2galon);
    costokm = precioGasolina / kmxgal;

      printf ("\n|Promedio Litros por cada 100km: %f | Km por galon: %f | Costo por km: %f", promedio,kmxgal,costokm );
      }

  return 0;
}
