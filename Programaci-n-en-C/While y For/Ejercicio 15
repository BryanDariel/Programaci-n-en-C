/* Programa en C que calcule el MCD de dos números */

#include <stdio.h>

int main () 
{
int n1, n2, i, residuo, mcd;

printf("Bienvenido. \nIntroduzca un número: ");

scanf("%d",&n1);

printf("\nIntroduzca el segundo número: ");scanf("%d", &n2);

do{
		residuo = n1 % n2;
		
	if (residuo != 0) {
	
		n1 = n2;
		n2 = residuo;
	}
	else {
		mcd = n2;
	}
} while (residuo != 0);

printf("\nEl MCD es: %d", mcd);

return 0;
}
